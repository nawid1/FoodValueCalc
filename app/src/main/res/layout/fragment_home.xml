<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/trackerTitles"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total loss"
            android:gravity="center"
            android:textColor="#3c415e"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weekly loss"
            android:textColor="#3c415e"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Monthly loss"
            android:textColor="#3c415e"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/trackerValues"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/trackerTitles"
        >


        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textColor="#3c415e"
            />

        <TextView
            android:id="@+id/weeklyTotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="#3c415e"
            />

        <TextView
            android:id="@+id/monthlyTotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="#3c415e"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/progressLayout"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/trackerTitles"
        >

        <ProgressBar
            android:id="@+id/pbTotal"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ProgressBar
            android:id="@+id/pbW"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ProgressBar
            android:id="@+id/pbM"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>