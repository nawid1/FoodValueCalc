<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">


    <view
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="367dp"
        android:layout_height="104dp"
        android:layout_marginTop="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </view>

    <Button
        android:id="@+id/addFoodItem"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:layout_marginTop="580dp"
        android:text="Add Food Item"
        android:textSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <EditText
        android:id="@+id/foodNameAdd"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:layout_marginTop="364dp"
        android:hint="Type In Food Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/foodPercentAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodPercentAdd"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/foodPriceAdd"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Price "
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/addFoodItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addFoodItem"
        app:layout_constraintTop_toBottomOf="@+id/foodPercentAdd" />

    <EditText
        android:id="@+id/foodPercentAdd"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Percent Used"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/foodPriceAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodPriceAdd"
        app:layout_constraintTop_toBottomOf="@+id/foodNameAdd" />




</androidx.constraintlayout.widget.ConstraintLayout>